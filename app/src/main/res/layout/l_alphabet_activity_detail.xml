<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Learn.Activity.Alphabet_Detail_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_home">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/TB_Alphabet_Detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Back" />

        <TextView
            android:id="@+id/tv_alpha_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:textColor="#FFFFFF"
            android:text="A"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TB_Alphabet_Detail" />

        <ImageView
            android:id="@+id/imv_Volumn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_volumn_on"
            app:layout_constraintBottom_toBottomOf="@id/tv_alpha_speak"
            app:layout_constraintStart_toEndOf="@+id/tv_alpha_speak" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFD6D6">

            <ImageView
                android:id="@+id/imv_mh"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imv_txt"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imv_mh" />

            <ImageView
                android:id="@+id/imv_Volumn1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:src="@drawable/ic_volumn_on"
                app:layout_constraintEnd_toEndOf="@id/imv_txt"
                app:layout_constraintStart_toStartOf="@+id/imv_txt"
                app:layout_constraintTop_toBottomOf="@+id/imv_txt" />

            <TextView
                android:id="@+id/tv_mh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Quả táo"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imv_Volumn1" />

            <TextView
                android:id="@+id/tv_txt_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apple"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mh"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>