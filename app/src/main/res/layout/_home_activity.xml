<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_home"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgEnglish"
        android:layout_width="200dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@mipmap/icon_english" />

    <ImageView
        android:id="@+id/imgFor"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_for" />

    <ImageView
        android:id="@+id/imgKids"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_kids" />

</LinearLayout>